@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Стоимость</th>
                <th>Автор</th>
                <th>Кол-во страниц</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.Name</td>
                    <td>@book.Price</td>
                    <td>@book.Author</td>
                    <td>@book.PageCount</td>
                    <td>
                         <form method="post">
                            <button type="submit" asp-page-handler="delete" asp-route-id="@book.Id" class="btn btn-danger">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
