@page
@model first.Pages.Fifth_taskModel
@{
}
<div class="accordion" id="accordionExample">
    <div class="text-center">Информация о странах</div>
    @for(int i= 0;i < 3;i++)
    {
        <div class="accordion-item">
            <h2 class="accordion-header" id="heading_@i">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@i" aria-expanded="false" aria-controls="collapse_@i">
                    @Model.Countries[i].Name
                </button>
            </h2>
            <div id="collapse_@i" class="accordion-collapse collapse" aria-labelledby="heading_@i" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <strong>Число жителей: </strong>@Model.Countries[i].CountCivils
                </div>
                <div class="accordion-body">
                    <strong>Описание страны: </strong>@Model.Countries[i].Description
                </div>
            </div>
        </div>
    }
</div>